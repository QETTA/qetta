{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "defaultMode": "bypassPermissions",
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "trigger": "PostToolUse",
        "commandMatch": "Edit|Write|MultiEdit",
        "filePatternMatch": "\\.(ts|tsx|js|jsx|mjs)$",
        "command": "npx prettier --write {{file_path}} --config .prettierrc || true",
        "statusMessage": "ðŸŽ¨ Formatting..."
      },
      {
        "trigger": "PostToolUse",
        "commandMatch": "Edit|Write|MultiEdit",
        "filePatternMatch": "\\.css$",
        "command": "npx prettier --write {{file_path}} --config .prettierrc || true",
        "statusMessage": "ðŸŽ¨ Formatting CSS..."
      },
      {
        "trigger": "PostToolUse",
        "commandMatch": "Edit.*prisma/schema.prisma|Write.*prisma/schema.prisma",
        "command": "npm run db:generate || true",
        "statusMessage": "âš¡ Regenerating Prisma Client..."
      }
    ]
  },
  "enableAllProjectMcpServers": true
}
